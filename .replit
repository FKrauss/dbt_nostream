modules = ["python-3.11"]
[nix]
channel = "stable-25_05"
packages = ["cacert", "git", "libyaml", "which"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Build Project"
author = 38059905
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dbt seed --full-refresh --vars '{\"load_source_data\": true}'"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dbt build"

[[workflows.workflow]]
name = "Push to GitHub"
author = 38059905
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git add ."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git status"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git commit -m \"Update from Replit\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git push origin main"

[[workflows.workflow]]
name = "DBT Dev - Run Models"
author = 38059905
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash setup_gcp_credentials.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dbt deps"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dbt run --target dev"

[[workflows.workflow]]
name = "DBT Dev - Test Only"
author = 38059905
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash setup_gcp_credentials.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dbt deps"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dbt test --target dev"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dbt-compile"

[[workflows.workflow]]
name = "dbt-compile"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dbt compile --profiles-dir ."

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "DBT Dev - Full Build"
author = 38059905
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash setup_gcp_credentials.sh"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dbt deps"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dbt build --target dev"

[agent]
expertMode = true
